{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "allowJs": true,
    "checkJs": false,
    "noEmit": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "types": ["node"],
    "skipLibCheck": true,
    "strict": false,
    "noImplicitAny": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "useUnknownInCatchVariables": false,
    "noImplicitThis": false,
    "exactOptionalPropertyTypes": false
  },
  "include": ["server/src/**/*.js", "server/src/**/*.mjs", "server/src/**/*.d.ts"]
}
